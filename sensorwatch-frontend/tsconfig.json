{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",

  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "DOM"],
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./public/js/**/*.ts",
    "!./node_modules/**/*"
  ]
}